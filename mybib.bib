eprint = {2010.10531},
file = {:Users/neptune/Documents/Mendeley Desktop/Winter et al/Nature/Winter et al. - 2020 - Stellar clustering shapes the architectures of planetary systems.pdf:pdf},
isbn = {4158602028000},
issn = {1476-4687},
journal = {Nature},
number = {May},
publisher = {Springer US},
title = {{Stellar clustering shapes the architectures of planetary systems}},
