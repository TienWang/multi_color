file = {:Users/neptune/Documents/Mendeley Desktop/Raghavan et al/Astrophysical Journal, Supplement Series/Raghavan et al. - 2010 - A survey of stellar families Multiplicity of solar-type stars(2).pdf:pdf},
issn = {00670049},
journal = {Astrophysical Journal, Supplement Series},
keywords = {Binaries: general,Planetary systems,Stars: solar-type,Stars: statistics,Surveys},
number = {1},
pages = {1--42},
title = {{A survey of stellar families: Multiplicity of solar-type stars}},
volume = {190},
year = {2010}
}
