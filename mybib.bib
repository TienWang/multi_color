file = {:Users/neptune/Documents/Mendeley Desktop/Evans, Sackett/Astrophysical Journal/Evans, Sackett - 2010 - An a priori investigation of astrophysical false positives in ground-based transiting planet surveys.pdf:pdf},
issn = {15384357},
journal = {Astrophysical Journal},
keywords = {Binaries: eclipsing,Planetary systems,Techniques: photometric},
number = {1},
pages = {38--51},
title = {{An a priori investigation of astrophysical false positives in ground-based transiting planet surveys}},
volume = {712},
