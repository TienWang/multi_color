eprint = {1307.2003},
file = {:Users/neptune/Documents/Mendeley Desktop/Santerne et al/Astronomy and Astrophysics/Santerne et al. - 2013 - The contribution of secondary eclipses as astrophysical false positives to exoplanet transit surveys.pdf:pdf},
issn = {00046361},
journal = {Astronomy and Astrophysics},
keywords = {Binaries: Eclipsing,Planetary systems,Techniques: Photometric},
title = {{The contribution of secondary eclipses as astrophysical false positives to exoplanet transit surveys}},
