keywords = {data analysis,detection,general,lites,methods,planets and satel-,planets and satellites,statistical},
number = {August},
title = {{Exoplanet Validation with Machine Learning: 50 new validated Kepler planets}},
url = {http://arxiv.org/abs/2008.10516},
year = {2020}
}
